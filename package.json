{
  "scripts": {
    "start": "node backend/src/server.js",
    "server": "nodemon --exec 'cd backend && node server.js'",
    "AuthServer": "nodemon --exec 'cd backend && node authServer.js'",
    "NotificationServer": "nodemon --exec 'cd backend && node notificationServer.js'",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },

  "dependencies": {
    "concurrently": "^9.1.0"
  }
}
